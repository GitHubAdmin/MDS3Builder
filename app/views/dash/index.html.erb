<div ng-app="Mds3Builder" ng-controller="DashController">
<h4>Choose an assessment type:</h4>

<h2 class="well" ng-click="orbaToggle()">OBRA Assessments</h2>

<div ng-show="orbaButtonList">
  <div class="orba_assessments" align="center">
    <div class="btn-group" ng-class='{open: open}'>
      <button type="pure-button" class="pure-button-disabled" data-toggle="dropdown">Admission</button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Admission", new_assessment_path({type: "Admission"})%></li>
        <li><%= link_to "Correction of Admission", new_assessment_path({type: "CorrectionOfAdmission"})%></li>
        <li><%= link_to "Inactivation of Admission", new_assessment_path({type: "InactivationOfAdmission"})%></li>
      </ul>
    </div>
    <div class="btn-group" ng-class='{open: open}'>
      <button type="pure-button" class="pure-button-disabled" data-toggle="dropdown">Quarterly</button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Quarterly", new_assessment_path({type: "Quarterly"})%></li>
        <li><%= link_to "Correction of Quarterly", new_assessment_path({type: "CorrectionOfQuarterly"})%></li>
        <li><%= link_to "Inactivation of Quarterly", new_assessment_path({type: "InactivationOfQuarterly"})%></li>
      </ul>
    </div>
    <div class="btn-group" ng-class='{open: open}'>
      <button type="pure-button" class="pure-button-disabled" data-toggle="dropdown">Annual</button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Annual", new_assessment_path({type: "Annual"})%></li>
        <li><%= link_to "Correction of Annual", new_assessment_path({type: "CorrectionOfAnnual"})%></li>
        <li><%= link_to "Inactivation of Annual", new_assessment_path({type: "InactivationOfAnnual"})%></li>
      </ul>
    </div>
    <div class="btn-group" ng-class='{open: open}'>
      <button type="pure-button" class="pure-button-disabled" data-toggle="dropdown">Change in Status</button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Change in Status", new_assessment_path({type: "SignificantChange"})%></li>
        <li><%= link_to "Correction of Change in Status", new_assessment_path({type: "CorrectionOfSignificantChange"})%></li>
        <li><%= link_to "Inactivation of Change in Status", new_assessment_path({type: "InactivationOfSignificantChange"})%></li>
      </ul>
    </div>
  </div>
</div>

